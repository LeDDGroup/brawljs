{
  "name": "template-node-javascript-game",
  "version": "1.0.0",
  "description": "Example of multiplayer game on node",
  "main": "dist/server/index.js",
  "scripts": {
    "start": "NODE_ENV=development node-dev --require ts-node/register/transpile-only src/server/index.ts",
    "prebuild": "rm -rf dist",
    "prepare": "npm run build",
    "build": "redrun build:*",
    "build:server": "tsc -p src/server",
    "build:client": "webpack --config src/client/webpack.config.js --mode production --output-path dist/client"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/koa": "^2.0.48",
    "@types/koa-static": "^4.0.0",
    "@types/node": "^10.12.18",
    "@types/socket.io": "^2.1.2",
    "@types/socket.io-client": "^1.4.32",
    "css-loader": "^2.1.0",
    "html-webpack-plugin": "^3.2.0",
    "node-dev": "^3.1.3",
    "redrun": "^7.0.3",
    "style-loader": "^0.23.1",
    "ts-loader": "^5.3.3",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.4",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1"
  },
  "dependencies": {
    "koa": "^2.6.2",
    "koa-static": "^5.0.0",
    "koa-webpack": "^5.2.1",
    "socket.io": "^2.2.0"
  }
}
